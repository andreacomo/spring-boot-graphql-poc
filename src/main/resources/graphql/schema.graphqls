type Query {
    book: BookQueries
    order: OrderQueries
}

type BookQueries {
    bookById(id: ID!): Book
}

type OrderQueries {
    orderById(id: ID!): Order
}

type Book {
    id: ID!
    name: String!
    pageCount: Int
    author: Author!
}

type Author {
    id: ID!
    firstName: String
    lastName: String
}

type Order {
    id: ID!,
    orderDetails: [OrderDetail]!
}

type OrderDetail {
    id: ID!
    quantity: Int!
    book: Book!
    price: Float!
}
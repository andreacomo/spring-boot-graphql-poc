extend type Query {
    orderById(id: ID!): Order
}

extend type Mutation {
    createOrder(orderDetails: [OrderDetailInput]!): Order!
}

type Order {
    id: ID!,
    creationDate: DateTime
    orderDetails: [OrderDetail]!
}

type OrderDetail {
    id: ID!
    quantity: Int!
    book: Book!
    price: Float!
}

input OrderDetailInput {
    quantity: Int!
    bookId: ID!
    price: Float!
}